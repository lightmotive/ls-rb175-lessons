
<h2><%== navigation_path(current_location) %></h2>
<ul>
<% @entries.each do |entry| %>
  <li>
    <a href="<%= entry.view_href %>"><%= entry.name %></a>
    <% if entry.edit_href %><a class="edit" href="<%= entry.edit_href %>">&#9998;</a><% end %>
    <% if entry.delete_href %><form class="delete" action="<%= entry.delete_href %>" method="post">
      <input type="submit" value="&#128465;">
    </form><% end %>
  </li>
<% end %>
</ul>
<footer>
  <a href="<%= new_directory_href %>">[New Directory]</a> <a href="<%= new_file_href %>">[New File]</a>
</footer>
<script src="/javascripts/browse_controller.js"></script>
