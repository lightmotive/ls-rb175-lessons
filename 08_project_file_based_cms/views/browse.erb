
<h2><%== navigation_path(current_location) %></h2>
<ul>
<% @entries.each do |entry| %>
  <li>
    <a href="<%= entry_view_href(entry) %>"><%= entry.name %></a>
    <% edit_href = entry_edit_href(entry); if edit_href %><a class="edit" href="<%= edit_href %>">&#9998;</a><% end %>
    <% delete_href = entry_delete_href(entry); if delete_href %><form class="delete" action="<%= delete_href %>" method="post">
      <input type="submit" value="&#128465;">
    </form><% end %>
  </li>
<% end %>
</ul>
<footer>
  <a href="<%= new_directory_href %>">[New Directory]</a> <a href="<%= new_file_href %>">[New File]</a>
</footer>
<script src="/javascripts/browse_controller.js"></script>
