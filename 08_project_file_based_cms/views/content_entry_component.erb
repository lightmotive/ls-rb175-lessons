<% if view_href %>
<a href="<%= view_href %>"><%= entry.name %></a>
<% end %>
<% if edit_href %>
<a class="edit" href="<%= edit_href %>"></a>
<% end %>
<% if delete_action %>
<form class="inline delete" action="<%= delete_action %>" method="post">
  <button class="delete" type="submit"></button>
</form>
<% end %>